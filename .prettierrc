{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss", "prettier-plugin-svelte"],
  "overrides": [
    { "files": "*.astro", "options": { "parser": "astro" } },
    { "files": "*.svelte", "options": { "parser": "svelte" } }
  ],
  "quoteProps": "consistent",
  "objectWrap": "collapse",
  "bracketSameLine": true,
  "trailingComma": "none",
  "arrowParens": "always",
  "bracketSpacing": true,
  "proseWrap": "always",
  "singleQuote": true,
  "printWidth": 120,
  "endOfLine": "lf",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true
}
