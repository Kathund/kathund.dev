---
import Project from '../components/Project.svelte';
import { projects } from './projects/index.astro';
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.svelte';
---

<Layout title="Home">
  <div class="flex flex-col items-center gap-4">
    <div class="grid grid-cols-1 grid-rows-1 gap-2 lg:grid-cols-2">
      {
        projects
          .slice(0, 2)
          .map((project) => (
            <Project
              title={project.title}
              lines={project.lines}
              links={project.links}
              built={project.built}
              involvement={project.involvement}
              path={project.path}
              client:only
            />
          ))
      }
    </div>
    <Link className="text-ctp-sapphire" href="/projects" text="Show more projects..." external={false} />
  </div>
</Layout>
