---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="latte bg-ctp-mantle text-ctp-text flex min-h-screen items-center justify-center">
    <main class="my-32 max-w-8/10 min-w-4/10 font-mono">
      <Header client:only />

      <div class="grid grid-cols-2 grid-rows-2 gap-2">
        {
          projects.map((project) => (
            <Project
              title={project.title}
              lines={project.lines}
              links={project.links}
              built={project.built}
              involvement={project.involvement}
              path={project.path}
              client:only
            />
          ))
        }
      </div>

      <Footer client:only />
    </main>
  </body>
</html>
