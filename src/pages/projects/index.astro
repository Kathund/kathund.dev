    built: [{ tag: 'TypeScript' }, { tag: 'npm' }, { tag: 'NodeJS' }],
    involvement: 'Maintainer'
  },
  {
    title: 'OneClient',
    lines: [
      'The anti-client for minecraft!',
      'Designed to be easy to use and built from the ground up to be fully open!'
    ],
    links: [
      { tag: 'GitHub', href: 'https://github.com/Polyfrost/OneLauncher' },
      { tag: 'Website', href: 'https://polyfrost.org/projects/oneclient' }
    ],
    built: [
      { tag: 'Tuari' },
      { tag: 'Tauri' },
      { tag: 'Rust' },
      { tag: 'TypeScript' },
      { tag: 'React' },
      { tag: 'TailwindCSS' },
      { tag: 'TanStack' }
    ],
    involvement: 'Maintainer'
  },
  {
    title: 'Spotify Manager',
